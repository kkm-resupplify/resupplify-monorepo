{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "./**/*",
    "./**/*.vue",
    "./**/*.json",
    "./**/*.ts",
    "shims-vue.d.ts",
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./"],
      "@sharedAtoms/*": ["./atoms/*"],
      "@sharedMolecules/*": ["./molecules/*"],
      "@sharedOrganisms/*": ["./organisms/*"],
      "@sharedEnums/*": ["./enums/*"],
      "@sharedTranslations/*": ["./translations/*"],
      "@sharedComposables/*": ["./composables/*"],
      "@sharedInterfaces/*": ["./interfaces/*"],
      "@sharedTokens/*": ["./design-system/tokens/*"],
      "@sharedStores/*": ["./stores/*"]
    }
  }
}
